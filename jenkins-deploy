pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the SCM
                git 'https://github.com/Praveen-991/hello-world.git'
            }
        }
        
        stage('Build') {
            steps {
                // Example build steps (replace with your actual build commands)
                sh 'mvn package'
            }
        }
        stage ('test') {
            steps {
                  //test the code 
                sh 'mvn test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example deployment steps (replace with your actual deployment commands)
                sh 'ssh ec2-user@ip-172-31-24-195 "cd  /home/ec2-user/apache-tomcat-9.0.85/webapps && ./deploy.sh"'
            }
        }
    }
}
